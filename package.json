    "browser-sync": "^2.26.7",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.19.1",
